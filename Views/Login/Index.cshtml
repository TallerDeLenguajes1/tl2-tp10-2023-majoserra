@* Realizar el formulario de Logue0 *@
@using EspacioTablero
@using MVC.ViewModel
@model LoginViewModel

<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-controller="Login" asp-action="Login" class="border border-secondary p-4 mx-auto shadow">
   
    <div class="form-group mb-3">
        <label asp-for="@Model.NombreUsuario"></label>
        <input asp-for="@Model.NombreUsuario" class="form-control"/>
        <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span> <!-- Agregamos lo de la validacion -->
    </div>

    <div class="form-group mb-3">
        <label asp-for="@Model.Contrasenia"></label>
        <input asp-for="@Model.Contrasenia" class="form-control"/>
        <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-secondary">Ingresar</button> 
  
   
</form>
 </div>
 </div>
 </div>

@section Scripts { <partial name="_ValidationScriptsPartial" /> } <!-- Lo agregamos para los asp-validation -->