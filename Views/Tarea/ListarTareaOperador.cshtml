@using EspacioTablero
@model MVC.ViewModel.ListarTareaViewModel

 <h2 class="text-center text-secondary fs-4  fw-bold">Tareas de mi tablero</h2>
    
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th hidden>Id</th>
            <th hidden>IdTablero</th>
            <th>NombreTarea</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th>Estado</th>
            <th>UsuarioAsignado</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>

    
        @foreach (var tarea in Model.Mitablerotarea)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td hidden>@tarea.Id_tablero</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.Estado</td>
                <td>@tarea.NombreUsuario</td>
                <td><a class="btn btn-outline-dark" asp-controller="Tarea" asp-action="ModificarTarea" asp-route-id="@tarea.Id">Modificar</a></td>
                <td>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@tarea.Id">
                            Eliminar
                        </button>

                        <div class="modal fade" id="exampleModal-@tarea.Id" tabindex="-1" aria-labelledby="exampleModalLabel-@tarea.Id"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel-@tarea.Id">Eliminar Tarea</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Â¿Desea eliminar la tarea @tarea.Nombre?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button"  class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
                                        <a class="btn  btn-outline-danger" asp-controller="Tarea" asp-action="EliminarTarea" asp-route-id="@tarea.Id">Confirmar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
