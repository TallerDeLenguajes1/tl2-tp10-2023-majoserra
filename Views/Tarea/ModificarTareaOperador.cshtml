@using EspacioTablero
@model MVC.ViewModel.ModificarTareaViewModel

<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Tarea" asp-action="ModificarTarea" class="border border-secondary p-4 mx-auto">
                <legend style="text-align: center; font-weight: bold;">Modificar Tarea</legend>
               <div class="form-group mb-3">
                    <input hidden asp-for="@Model.Id" class="form-control"  />
                    <input hidden asp-for="@Model.Id_tablero" class="form-control" />
                    <input hidden asp-for="@Model.Id_usuario_asignado"class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label hidden asp-for="@Model.Nombre"></label>
                    <input hidden asp-for="@Model.Nombre" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Estado" class="form-label">Estado</label>
                    <select asp-for="@Model.Estado" class="form-select">
                        <option value="0">ToDo</option>
                        <option value="1">Doing</option>
                        <option value="2">Review</option>
                        <option value="3">Done</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label hidden asp-for="@Model.Descripcion"></label>
                    <input hidden asp-for="@Model.Descripcion" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label hidden asp-for="@Model.Color"></label>
                    <input hidden asp-for="@Model.Color" class="form-control" />
                </div>

                <button type="submit" class="btn btn-secondary">Enviar</button>
            </form>
        </div>
    </div>
</div>