@using EspacioTablero
@model Tablero

<form asp-controller="Tablero" asp-action="CrearTablero">
    <div class="form-group">
        <label asp-for="@Model.Id_usuario_propetario"></label>
        <input asp-for="@Model.Id_usuario_propetario" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Nombre"></label>
        <input asp-for="@Model.Nombre" class="form-control"/>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion"></label>
        <input asp-for="@Model.Descripcion" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>    
</form>