@using EspacioTablero
@model MVC.ViewModel.ModificarTableroViewModel

<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Tablero" asp-action="ModificarTablero" class="border border-secondary p-4 mx-auto">
                <legend style="text-align: center; font-weight: bold;">Crear Tablero</legend>
                
                <div class="form-group mb-3">
                    <input hidden asp-for="@Model.Id" class="form-control"/>
                    <input hidden asp-for="@Model.Id_usuario_propetario" class="form-control"/>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.NombreTablero"></label>
                    <input asp-for="@Model.NombreTablero" class="form-control"/>
                    <span asp-validation-for="@Model.NombreTablero" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Descripcion"></label>
                    <input asp-for="@Model.Descripcion" class="form-control"/>
                    <span asp-validation-for="@Model.Descripcion" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-secondary">Enviar</button>    
            </form>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }