@using EspacioTablero
@model MVC.ViewModel.ListarTableroViewModel

<style>
    .table-pink thead {
        background-color: rgb(167, 65, 136);
        color: rgb(163, 58, 132);
    }
</style>

<h2 class="text-center text-secondary fs-4  fw-bold">Listado de Tableros</h2>

<table class="table table-striped table-hover">
    <thead class="table-pink">
        <tr>
            <th hidden>Id</th>
            <th hidden>IdTablero</th>
            <th>Propietario</th>
            <th>NombreTablero</th>
            <th>Descripcion</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tablero in Model.TablerosView)
        {
            <tr>
                <td hidden>@tablero.Id</td>
                <td>@tablero.NombrePropietario</td>
                <td>@tablero.NombreTablero</td>
                <td>@tablero.Descripcion</td>
                <td><a class="btn btn-outline-dark" asp-controller="Tablero" asp-action="ModificarTablero" asp-route-id="@tablero.Id">Modificar</a></td>
                <td>
                        <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@tablero.Id">
                            Eliminar
                        </button>

                        <div class="modal fade" id="exampleModal-@tablero.Id" tabindex="-1" aria-labelledby="exampleModalLabel-@tablero.Id"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h1 class="modal-title fs-5" id="exampleModalLabel-@tablero.Id">Eliminar Tablero</h1>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <p>Â¿Desea eliminar el tablero @tablero.NombreTablero?</p>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button"  class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
                                        <a class="btn  btn-outline-danger" asp-controller="Tablero" asp-action="EliminarTablero" asp-route-id="@tablero.Id">Confirmar</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>   </tr>
        }

    </tbody>
</table>

<div class="form-group mb-3 text-center">
    <div class="col-md-4 mx-auto"> <!-- Utiliza mx-auto para centrar en dispositivos medianos y grandes -->
        <a class="btn btn-dark btn-block text-white" asp-area="" asp-controller="Tablero" asp-action="CrearTablero">Agregar Tablero</a>
    </div>
</div>
