@using EspacioTablero
@model MVC.ViewModel.CrearUsuarioViewModel  // usamos el viewmodel 


<div class="container mt-5 ">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Usuario" asp-action="CrearUsuario" class="border border-secondary p-4 mx-auto">
                <legend style="text-align: center; font-weight: bold;">Alta Usuario</legend>
                <div class="form-group mb-3">
                    <label asp-for="@Model.NombreDeUsuario" class="text-left"></label>
                    <input asp-for="@Model.NombreDeUsuario" class="form-control"/>
                    <span asp-validation-for="@Model.NombreDeUsuario" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Contrasenia" class="text-left"></label>
                    <input type="password" asp-for="@Model.Contrasenia" class="form-control"/>
                    <span asp-validation-for="@Model.Contrasenia" class="text-danger"></span>
                </div>
                <div class="form-group mb-3">
                    <label asp-for="@Model.Rol" class="text-left"></label>
                    <input asp-for="@Model.Rol" class="form-control"/>
                    <span asp-validation-for="@Model.Rol" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-secondary">Enviar</button>
            </form>
        </div>
    </div>
</div>
@section Scripts { <partial name="_ValidationScriptsPartial" /> }